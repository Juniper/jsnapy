  - command: show interfaces terse ge-*
  - item:
      id: ./name
      xpath: //physical-interface[normalize-space(name) = "ge-0/0/0"]
      tests:
        - is-equal: oper-status, up
          info: "Test Succeeded!! oper-status is {{pre_oper-status}} for interface {{id_0}}"
          err: "Test Failed!!! oper-status is {{'post_oper-status'}} for interface {{id_0}}"
